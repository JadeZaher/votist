{
	"name": "votist",
	"private": true,
	"version": "0.0.2",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"clean": "rm -rf .svelte-kit build",
		"build": "svelte-kit sync && prisma generate && vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"db:seed": "tsx prisma/seed.ts",
		"db:reset": "prisma migrate reset --force && npm run db:seed",
		"generate:prisma": "tsx scripts/dbml-to-prisma.ts && npx prisma validate"
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
	"devDependencies": {
		"@dbml/core": "^6.2.0-alpha.0",
		"@sveltejs/adapter-vercel": "^5.5.2",
		"@sveltejs/kit": "^2.27.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "^4.0.12",
		"@tailwindcss/typography": "^0.5.16",
		"@types/bcryptjs": "^2.4.6",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.15.3",
		"@types/pluralize": "^0.0.33",
		"daisyui": "^5.0.0",
		"eslint": "^9.25.1",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-svelte": "^3.5.1",
		"lucide-svelte": "^0.477.0",
		"pluralize": "^8.0.0",
		"postcss": "^8.5.3",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"prisma": "^6.7.0",
		"prisma-markdown": "^2.0.0",
		"svelte": "^5.37.3",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.0.12",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.31.1",
		"vite": "^6.0.0",
		"vitest": "^3.0.0",
		"zod-prisma-types": "^3.2.4"
	},
	"dependencies": {
		"@prisma/client": "^6.7.0",
		"@sveltejs/adapter-node": "^5.5.2",
		"@trpc/client": "^10.45.2",
		"@trpc/server": "^10.45.2",
		"@vimeo/player": "^2.29.5",
		"bcryptjs": "^3.0.3",
		"superjson": "^2.2.2",
		"svelte-clerk": "^0.13.0",
		"svelte-dnd-action": "^0.9.61",
		"svelte-youtube-lite": "^1.2.1",
		"trpc-shield": "^0.4.4",
		"trpc-sveltekit": "^3.6.3",
		"zod": "^3.24.3"
	}
}
