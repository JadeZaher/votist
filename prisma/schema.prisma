generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

generator markdown {
  provider = "prisma-markdown"
  output   = "./generated/ERD.md"
  title    = "Executive Function App"
}

generator zod {
  provider         = "zod-prisma-types"
  output           = "./generated/zod"
  useMultipleFiles = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Assembly {
  id          String   @id @default(cuid())
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  status      String   @default("draft") // draft, active, closed
  topic       String
  location    String?
  votes       Int      @default(0)
}

enum QuizDifficulty {
  VOTIST
  SCHOLAR
  MENTOR
}

model Quiz {
  id             String           @id @default(cuid())
  title          String
  description    String
  difficulty     QuizDifficulty   @default(VOTIST)
  sequence       Int              @default(0)
  questions      Question[]
  enabled        Boolean          @default(true)
  completions    QuizCompletion[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  prerequisiteId String?
  prerequisite   Quiz?            @relation("QuizPrerequisites", fields: [prerequisiteId], references: [id])
  nextQuizzes    Quiz[]           @relation("QuizPrerequisites")
  QuizProgress   QuizProgress[]

  @@index([difficulty, sequence])
  @@index([prerequisiteId])
}

model Question {
  id              String   @id @default(cuid())
  text            String
  correctOptionId String?  @unique
  correctOption   Option?  @relation("correctAnswer", fields: [correctOptionId], references: [id])
  options         Option[]
  points          Int      @default(1)
  quizId          String
  quiz            Quiz     @relation(fields: [quizId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Option {
  id                 String    @id @default(cuid())
  text               String
  questionId         String
  question           Question  @relation(fields: [questionId], references: [id])
  correctForQuestion Question? @relation("correctAnswer")
  isNoOpinion        Boolean   @default(false)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

enum QuizStatus {
  LOCKED
  AVAILABLE
  IN_PROGRESS
  COMPLETED
}

model QuizProgress {
  id          String     @id @default(cuid())
  userId      String
  quizId      String
  quiz        Quiz       @relation(fields: [quizId], references: [id])
  status      QuizStatus @default(LOCKED)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  User        User?      @relation(fields: [userClerkId], references: [clerkId])
  userClerkId String?

  @@unique([userId, quizId])
  @@index([userId, status])
}

// QuizCompletion stores the actual quiz attempt data, while QuizProgress tracks the current state
// This separation is important because:
// 1. We can track quiz availability and prerequisites (LOCKED vs AVAILABLE states)
// 2. We can show visual progress in the roadmap UI (using status)
// 3. We maintain quiz attempt history separately from progression status
// 4. Allows for multiple attempts while maintaining a clear progression path
model QuizCompletion {
  id          String    @id @default(cuid())
  userId      String
  quizId      String
  quiz        Quiz      @relation(fields: [quizId], references: [id])
  score       Int
  answers     Json
  completed   Boolean   @default(false)
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  User        User?     @relation(fields: [userClerkId], references: [clerkId])
  userClerkId String?

  @@unique([userId, quizId])
  @@index([userId])
}

model User {
  clerkId      String           @id
  email        String?          @unique
  isAdmin      Boolean          @default(false)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  quizProgress QuizProgress[]
  completions  QuizCompletion[]
}
